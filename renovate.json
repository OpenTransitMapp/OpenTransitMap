{
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":separateMultipleMajorReleases",
    ":timezone(America/New_York)",
    ":label(renovate)"
  ],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 10,
  "enabledManagers": ["npm", "dockerfile", "docker-compose", "github-actions"],
  "minimumReleaseAge": "5 days",
  "ignoreUnstable": true,
  "rangeStrategy": "bump",
  "rebaseWhen": "conflicted",
  "dependencyDashboard": true,
  "platformAutomerge": false,
  "npm": {
    "postUpdateOptions": ["yarnDedupeHighest"]
  },
  "postUpgradeTasks": {
    "commands": [
      "corepack yarn install --mode=update-lockfile",
      "corepack yarn dedupe --strategy highest",
      "corepack yarn prettier --write '**/*.{json,md,yml,yaml}'",
      "corepack yarn lint --fix"
    ],
    "fileFilters": ["**/package.json", "yarn.lock"],
    "executionMode": "update"
  },
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "schedule": ["at any time"],
    "automerge": false
  },
  "lockFileMaintenance": {
    "enabled": false,
    "extends": [":semanticCommitTypeAll(chore)"],
    "commitMessageAction": "lockfile",
    "schedule": ["on saturday"],
    "automerge": false
  },
  "branchPrefix": "renovate/",
  "commitMessagePrefix": "",
  "semanticCommitType": "chore",
  "semanticCommitScope": "deps",
  "schedule": ["every weekday after 01:00 and before 06:00"],
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "semanticCommitScope": "{{packageFileDir}}"
    },
    {
      "groupName": "Node Docker base",
      "matchManagers": ["dockerfile"],
      "matchDatasources": ["docker"],
      "matchPackageNames": ["node"],
      "allowedVersions": "20.* || 22.*",
      "pinDigests": true,
      "schedule": ["on wednesday"],
      "automerge": false
    },
    {
      "groupName": "Docker base images",
      "matchManagers": ["dockerfile"],
      "schedule": ["on wednesday"],
      "pinDigests": true,
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automerge": false
    },
    {
      "groupName": "Docker Compose images",
      "matchManagers": ["docker-compose"],
      "schedule": ["on wednesday"],
      "pinDigests": true,
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automerge": false
    },
    {
      "groupName": "TypeScript toolchain",
      "matchManagers": ["npm"],
      "matchPackageNames": [
        "/^typescript$/",
        "/^ts-node$/",
        "/^ts-jest$/",
        "/^tsx$/",
        "/^@types\\//",
        "/^eslint(-|$)/",
        "/^@typescript-eslint\\//",
        "/^prettier$/"
      ],
      "schedule": ["on saturday"],
      "automerge": false,
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "groupName": "Map stack",
      "matchManagers": ["npm"],
      "matchPackageNames": [
        "/^maplibre-gl$/",
        "/^@maplibre\\//",
        "/^@types\\/mapbox__vector-tile$/",
        "/^pbf$/",
        "/^vt-pbf$/",
        "/^geojson-.*/",
        "/^@turf\\//"
      ],
      "schedule": ["on saturday"],
      "automerge": false,
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "groupName": "Backend core libs",
      "matchManagers": ["npm"],
      "matchPackageNames": [
        "/^zod$/",
        "/^(fastify|express)$/",
        "/^(undici|node-fetch)$/",
        "/^ws$/",
        "/^dotenv(-expand)?$/",
        "/^pino(-|$)/"
      ],
      "schedule": ["on monday"],
      "automerge": false
    },
    {
      "groupName": "Testing",
      "matchManagers": ["npm"],
      "matchPackageNames": [
        "/^(jest|vitest|uvu)$/",
        "/^supertest$/",
        "/^@testing-library\\//"
      ],
      "schedule": ["on saturday"],
      "automerge": false,
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "groupName": "DevDependencies (weekly batch)",
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "schedule": ["on saturday"],
      "automerge": false,
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "groupName": "GitHub Actions",
      "matchManagers": ["github-actions"],
      "schedule": ["on tuesday"],
      "automerge": false
    },
    {
      "matchUpdateTypes": ["major"],
      "labels": ["major"],
      "automerge": false,
      "prCreation": "not-pending"
    }
  ]
}
