{
  "name": "open-transit-map",
  "private": true,
  "packageManager": "yarn@4.3.1",
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "postinstall": "husky || true",
    "lint": "eslint \"{services,packages}/**/*.{ts,tsx,js}\"",
    "typecheck": "tsc -b",
    "build": "yarn workspaces foreach --all --topological --verbose --interlaced run build",
    "start": "yarn workspaces foreach --all --parallel --interlaced run start",
    "test": "yarn workspaces foreach --all --parallel --interlaced run test",
    "coverage": "yarn workspaces foreach --all --topological --verbose --interlaced run test:coverage",
    "coverage:summary": "yarn workspaces foreach --all --topological --verbose --interlaced run test:coverage:summary",
    "format": "prettier --write '**/*.{json,md,yml,yaml}'",
    "format:check": "prettier --check '**/*.{json,md,yml,yaml}'",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "22.18.8",
    "@typescript-eslint/eslint-plugin": "8.45.0",
    "@typescript-eslint/parser": "8.45.0",
    "eslint": "9.37.0",
    "globals": "15.15.0",
    "husky": "9.1.7",
    "prettier": "3.6.2",
    "typescript": "5.9.3"
  }
}
