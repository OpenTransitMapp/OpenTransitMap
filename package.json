{
  "name": "open-transit-map",
  "private": true,
  "packageManager": "yarn@4.3.1",
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "postinstall": "husky || true",
    "lint": "eslint \"packages/**/*.{ts,tsx,js}\"",
    "typecheck": "tsc -b",
    "build": "yarn workspaces foreach -A --topological -v run build",
    "start": "yarn workspaces foreach -A -p run start",
    "test": "yarn workspaces foreach -A -p run test || true",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "22.7.4",
    "@typescript-eslint/eslint-plugin": "8.8.1",
    "@typescript-eslint/parser": "8.8.1",
    "eslint": "9.11.1",
    "globals": "15.9.0",
    "husky": "9.1.6",
    "typescript": "5.6.3"
  }
}
